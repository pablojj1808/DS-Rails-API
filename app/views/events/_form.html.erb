<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class=" field form-group">
    <%= form.label :name , class: "control-label" %>
    <%= form.text_field :name , class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :info , class: "control-label" %>
    <%= form.text_area :info , class:"form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :date , class: "control-label" %>
    <%= form.datetime_select :date , class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price, class: "control-label"  %>
    <%= form.text_field :price , class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :nTickets, class: "control-label"  %>
    <%= form.number_field :nTickets , class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :img, class: "control-label"  %>
    <%= form.text_field :img , class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :color, class: "control-label"  %>
    <%= form.text_field :color , class:"form-control" %>
  </div>

  <div class="btn btn-primary text-white m-2 w-100">
    <%= form.submit class:"btn text-white" %>
  </div>
<% end %>
