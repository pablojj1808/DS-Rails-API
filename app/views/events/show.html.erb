<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Info:</strong>
  <%= @event.info %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Price:</strong>
  <%= @event.price %>
</p>

<p>
  <strong>Ntickets:</strong>
  <%= @event.nTickets %>
</p>

<p>
  <strong>Img:</strong>
  <%= @event.img %>
</p>

<p>
  <strong>Color:</strong>
  <%= @event.color %>
</p>

<div class="btn-group m-4">
  <p>
    <%=link_to 'Back', events_path,  :class => "btn btn-primary m-3" %>
  </p>
  <p>
    <%= link_to 'Edit', edit_event_path(@event)  , :class => "btn btn-outline-primary m-3" %>
  </p>
</div>


<div class="col m-5">
  <div class="row shadow m-4 mt-5 p-4" style="background-color:#fff; height: fit-content; ">
    <div class="row" style="margin-top:1em; margin-left: 1em;  margin-right: 1em;">
      <h1> <%= @event.name %> </h1>
      <p> <%= @event.date %> </p>
      <div class="opinion">
