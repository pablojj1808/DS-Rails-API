<style>
  form {
      margin: auto;
      width: 50%;
      justify-content: center;

  }

  h1 {
      text-align: center;
  }
</style>
  <div class="center-block">

<h1 class="h3 mb-3 fw-normal">Inicia sesi√≥n</h1>


<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "foo") do |f| %>
  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput" %>
    <label for="floatingInput"><%= f.label :email %></label>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    <label for="floatingInput"><%= f.label :password %></label>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>
  </div>
      <%= render "devise/shared/links" %>
<% end %>

  </div>


